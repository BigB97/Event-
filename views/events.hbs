    <section class="main2">
        <div class="container">
            <div>
                <h2 style="margin: 20px 0px 30px 0px;">Events</h2>
            </div>
            <div class="row">
                    {{#each eventLists}}
                <div class="col-sm-6 col-md-3 ">
                        <div class="card  mb-3 card-bod">
                            <div class="img_zone">
                                <div class="price_tag">
                                    <h3>#2,000</h3>
                                </div>
                            <img class="card-img-top img-fluid" src=" https://picsum.photos/200/150/?random " alt="Card image cap " width="400 ">
                        </div>
                        <div class="card-body ">
                            <div style="display: flex; justify-content: space-between;">
                                <p class="card-text "><i class="fa fa-map-marker" aria-hidden="true"> {{this.city}}</i> </p>
                                <p class="card-text "><i class="fa fa-calendar" aria-hidden="true">{{this.startDate}}</i></p>
                            </div>
                            <h4 class="card-title">{{this.title}}</h4>
                            <button type="button" class="btn btn-secondary btn-lg btn-block"><a href="/post/{{this._id}}" style="text-decoration: none; color: white;"><a href="/post/{{this._id}}" style="text-decoration: none; color: white;">Read More</a></a></button>
                        </div>
                    </div>
                </div>
                    {{/each}}
            </div>
        </div>
    </section>
