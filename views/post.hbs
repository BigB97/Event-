<section class="imgSec" style="width: 100%;">
  <img style="width: 100%;" src="{{post.image}}">
</section>


<section class="main3">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-6 col-lg-6 postContent">
        <h2>{{post.title}}</h2>
        <p>{{post.description}}</p>
      </div>
      <div class="col-sm-6 col-md-6 col-lg-6 postContent2">
        <div class="eventDetails">
          <div class="venue">
            <h4><i class="fa fa-map-marker" aria-hidden="true" style="padding-right:3px ;"></i>VENUE</h4>
            <p>{{post.address}}</p>
          </div>

          <div class="date_time" >
            <h4><i class="fa fa-calendar" aria-hidden="true" style="padding-right:3px" ></i> DATE AND TIME</h4>
            <div style="display: flex; justify-content: space-between;">
            <p class="dateStart">
              Start Date:<br>{{post.startDate}}
            </p>
            <p class="dateStop">
              End Date:<br>{{post.stopDate}}
            </p>
            </div>
          </div>
          <div class="ticket">
            <h4><i class="fa fa-money" aria-hidden="true" style="padding-right:3px;"></i> Ticket</h4>
            <p style=" font-size: 16px;"><b>Regular: </b>₦2,000.00</p>
            <p style=" font-size: 16px;"><b>VIP: </b>₦10,000.00</p>
            <p style=" font-size: 16px;"><b>Table for 10: </b>₦50,000.00</p>
          </div>
          <div style="text-align: center; margin-top: 50px;">
            <button class="buy_ticket"><a href="#">Buy Ticket</a></button>
          </div>
      </div>
    </div>
  </div>
</section>